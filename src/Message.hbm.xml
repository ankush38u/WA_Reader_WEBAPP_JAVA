<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.electricdroid.beans">
	<class name="Message" table="messages">
		<id name="_id" column="_id" >
			<generator class="increment"></generator>
		</id>
		<property name="key_remote_jid" type="string"></property>
		<property name="key_from_me" ></property>
		<property name="data" type="string"></property>
		<property name="timestamp" ></property>
		<property name="media_url" ></property>
		<property name="media_mime_type"></property>
		<property name="media_wa_type" ></property>
		<property name="received_timestamp"></property>
			<property name="remote_resource" type="string"></property>
		</class>
</hibernate-mapping>